  <div class="w-full md:w-1/2 flex items-center mx-auto" data-controller="clipboard">
    <p class="text-nowrap text-white text-sm mr-2">Shareable Link:</p>
    <%= text_field_tag "", @call_to_audition.respond_url, class: "block w-64 text-sm text-black bg-white shadow-sm rounded-lg border px-3 py-2 w-full border-gray-400", disabled: true, data: { clipboard_target: "textField" }  %>
    <p class="ml-1 font-medium rounded-lg text-sm px-2 py-1 h-9 text-center mb-0 inline-block text-pink-500 bg-white hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-gray-200 cursor-pointer" data-action="click->clipboard#copy">
