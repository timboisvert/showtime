<%# app/views/people/_search_results.html.erb %>
<% if people.any? %>
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4 w-full">
    <% people.each do |person| %>
      <div class="bg-white rounded shadow p-4 flex flex-col items-center">
        <% if person.headshot.attached? %>
          <%= image_tag person.headshot.variant(:thumb), class: "w-16 h-16 rounded-full object-cover mb-2" %>
        <% end %>
        <span class="font-semibold"><%= person.stage_name.presence || person.email %></span>
        <span class="text-xs text-gray-500"><%= person.email %></span>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="text-gray-400 text-center">No people found.</div>
<% end %>
